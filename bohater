import pygame
pygame.init()

okno = pygame.display.set_mode((1280,720))

idz_prawo = [pygame.image.load('prawo1.png'), pygame.image.load('prawo2.png')]
idz_lewo = [pygame.image.load('lewo1.png'), pygame.image.load('lewo2.png')]
idz_prosto = [pygame.image.load('3.png'), pygame.image.load('2.png')]
idz_tyl = [pygame.image.load('tyl1.png'), pygame.image.load('tyl2.png')]

tlo = pygame.image.load('tlo.jpg')
stoj = pygame.image.load('1.png')

szerokosc_poczatkowa = 600
wysokosc_poczatkowa = 600
ruch = 4

clock = pygame.time.Clock()

lewo = False
prawo = False
prosto = False
tyl = False
licznik = 0

def ruchy_bohatera():
    global licznik

    okno.blit(tlo, (0,0))
    if licznik +1 >= 6:
        licznik = 0

    if lewo:
        okno.blit(idz_lewo[licznik//3], (szerokosc_poczatkowa,wysokosc_poczatkowa))
        licznik += 1
    elif prawo:
        okno.blit(idz_prawo[licznik//3], (szerokosc_poczatkowa,wysokosc_poczatkowa))
        licznik += 1
    elif prosto:
        okno.blit(idz_prosto[licznik//3], (szerokosc_poczatkowa,wysokosc_poczatkowa))
        licznik += 1
    elif tyl:
        okno.blit(idz_tyl[licznik//3], (szerokosc_poczatkowa,wysokosc_poczatkowa))
        licznik += 1
    else:
        okno.blit(stoj, (szerokosc_poczatkowa, wysokosc_poczatkowa))
        licznik = 0

    pygame.display.update()



run = True

while run:
    clock.tick(16)

    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            run = False

    klawisz = pygame.key.get_pressed()

    if klawisz[pygame.K_LEFT]:
        szerokosc_poczatkowa -= ruch
        lewo = True
        prawo = False
        tyl = False
        prosto = False

    elif klawisz[pygame.K_RIGHT]:
        szerokosc_poczatkowa += ruch
        prawo = True
        lewo = False
        tyl = False
        prosto = False

    elif klawisz[pygame.K_UP]:
        wysokosc_poczatkowa -= ruch
        prosto = True
        lewo = False
        prawo = False
        tyl = False

    elif klawisz[pygame.K_DOWN]:
        wysokosc_poczatkowa += ruch
        tyl = True
        prosto = False
        lewo = False
        prawo = False
    else:
        lewo = False
        prawo = False
        tyl = False
        prosto = False

    ruchy_bohatera()


pygame.quit()
